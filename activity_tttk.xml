<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".ui.TttkActivity"
    tools:showIn="@layout/activity_tttk">

    <TextView
        android:id="@+id/tenAPP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="24dp"
        android:selectAllOnFocus="true"
        android:text="GA HÀ NỘI"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/textTenKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên Khách Hàng: Lê Văn An"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/textID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:text="Mã Thẻ: M01"
        android:textSize="30dp" />



    <TextView
        android:id="@+id/textTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Số tiền còn lại: 10.000 VNĐ"
        android:textColor="@color/white"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/textTuoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Tuổi: 7"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textCMT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Số CMND: NULL"
        android:textColor="@color/white"
        android:textSize="30dp" />

</LinearLayout>